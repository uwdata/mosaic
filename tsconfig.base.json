{
  "compilerOptions": {
    "target": "es2022",
    "module": "node16",
    "sourceMap": true,
    "moduleResolution": "node16",
    "allowJs": true,
    "checkJs": true,
    "forceConsistentCasingInFileNames": true,

    // Disable strict checks for now until we have better types.
    // This can be overridden in specific projects.
    "strict": false,

    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "incremental": true,
    "skipLibCheck": true,
    "noEmitOnError": true
  }
}
